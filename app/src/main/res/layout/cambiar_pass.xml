<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="beforeDescendants"
              android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cambiarContrase単a"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:padding="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tILPassActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contrase単a Actual"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/eTPassActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tILNuevaPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva Contrase単a"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/eTNuevaPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tILRepetirPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Repetir Contrase単a"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/eTRepetirPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="100">

        <Button
            android:id="@+id/cancelarCambiarPass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="Cancelar"
            android:layout_marginRight="1dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/aceptarCambiarPass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="Aceptar"
            android:layout_marginLeft="1dp"/>

    </LinearLayout>

</LinearLayout>